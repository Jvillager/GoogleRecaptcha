<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="captcha"  method="upgrade">
	<name>Google-Recaptcha</name>
	<version>1.0.0</version>
	<creationDate>Feb 2015</creationDate>
	<author>JVillager</author>
	<authorEmail>iJvillager@gmail.com</authorEmail>
	
	<copyright>Copyright (C) 2005 - 2014 JVillager.in. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<description>PLG_CAPTCHA_GOOGLE_RECAPTCHA_XML_DESCRIPTION</description>
	<scriptfile>install.script.php</scriptfile>
	<files>
	
		<filename
			plugin="googlerecaptcha">googlerecaptcha.php
		</filename>
		<filename>install.script.php</filename>
	
	</files>
	
	<languages>
		<language tag="en-GB">languages/en-GB.plg_captcha_googlerecaptcha.ini</language>
	</languages>
	
	
	
	<config>
	<fields name="params">
		<fieldset name="basic">
		<field
			name="site_key"
			type="text"
			default=""
			label="PLG_GOOGLE_RECAPTCHA_SITE_KEY_LABEL"
			description="PLG_GOOGLE_RECAPTCHA_SITE_KEY_DESC"
			required="true"
			filter="string"
			size="50" />

		<field
			name="secret_key"
			type="text"
			default=""
			label="PLG_GOOGLE_RECAPTCHA_SECRET_KEY_LABEL"
			description="PLG_GOOGLE_RECAPTCHA_SECRET_KEY_DESC"
			required="true"
			filter="string"
			size="50" />

		</fieldset>
	</fields>
	</config>
</extension>
