<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="captcha">
	<name>plg_captcha_googlerecaptcha</name>
	<version>1.0.0</version>
	<creationDate>Feb 2015</creationDate>
	<author>JVillager</author>
	<authorEmail>admin@jvillager.in</authorEmail>
	<authorUrl>www.jvillager.in</authorUrl>
	<copyright>Copyright (C) 2005 - 2014 JVillager.in. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<description>PLG_CAPTCHA_GOOGLE_RECAPTCHA_XML_DESCRIPTION</description>
	<files>
		<filename
			plugin="googlerecaptcha">googlerecaptcha.php</filename>
	</files>
	<config>
	<fields name="params">
		<fieldset name="basic">
		<field
			name="site_key"
			type="text"
			default=""
			label="PLG_GOOGLE_RECAPTCHA_PUBLIC_KEY_LABEL"
			description="PLG_GOOGLE_RECAPTCHA_SITE_KEY_DESC"
			required="true"
			filter="string"
			size="50" />

		<field
			name="secret_key"
			type="text"
			default=""
			label="PLG_GOOGLE_RECAPTCHA_PRIVATE_KEY_LABEL"
			description="PLG_GOOGLE_RECAPTCHA_SECRET_KEY_DESC"
			required="true"
			filter="string"
			size="50" />

		</fieldset>
	</fields>
	</config>
</extension>
